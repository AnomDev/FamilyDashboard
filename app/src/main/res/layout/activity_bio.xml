<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/ultraSoftBackgrounRebeca">

    <TextView
        android:id="@+id/tvPersonChosenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chosen person name"
        android:textColor="@color/colorAccentRebeca"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/marginDefault"
       />

    <ImageView
        android:id="@+id/ivPersonChosenPicture"
        android:layout_width="@dimen/dimenChoosePicture"
        android:layout_height="@dimen/dimenChoosePicture"
        app:layout_constraintTop_toBottomOf="@id/tvPersonChosenName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/iv_rebeca"
        android:elevation="1dp"
        android:layout_marginTop="@dimen/marginDefault"
        />

    <ScrollView
        android:id="@+id/scrollvPersonChosenBio"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/ivPersonChosenPicture"
        android:layout_marginTop="@dimen/marginDefault"
        >

        <TextView
            android:id="@+id/tvPersonChosenBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPersonChosenPicture" />
    </ScrollView>

    <Button
        android:id="@+id/btnPersonChosenBabyGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby"
        android:textSize="16sp"
        android:backgroundTint="@color/colorAccentRebeca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollvPersonChosenBio"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btnPersonChosenKidGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Kid"
        android:textSize="16sp"
        android:backgroundTint="@color/colorAccentRebeca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPersonChosenBabyGrid"
        android:layout_marginTop="@dimen/marginDefault"
        />

    <Button
        android:id="@+id/btnPersonChosenTeenGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teen"
        android:textSize="16sp"
        android:backgroundTint="@color/colorAccentRebeca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPersonChosenKidGrid"
        android:layout_marginTop="@dimen/marginDefault"
        />

    <Button
        android:id="@+id/btnPersonChosenActualGrid"
        android:backgroundTint="@color/colorAccentRebeca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPersonChosenTeenGrid"
        android:layout_marginTop="@dimen/marginDefault"
        />


</androidx.constraintlayout.widget.ConstraintLayout>